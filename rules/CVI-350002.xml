<?xml version="1.0" encoding="UTF-8"?>
<cobra document="https://github.com/wufeifei/cobra">
    <name value="Redis匿名访问"/>
    <language value="php"/>
    <match mode="regex-only-match"><![CDATA[\-\>connect\((['\"]\w+\.[\w\.]+?['\"]\s*,)\s*(\d+)[\),]]]></match>
    <level value="4"/>
    <test>
        <case assert="true"><![CDATA[
            $redis = new Redis();
            $redis->connect('192.168.1.2', 6379);
            $redis->auth('passwd123!#');
            $redis->set('key','SS');
        ]]></case>
    </test>
    <solution>
        ## 安全风险
        Redis匿名访问

        ## 修复方案
        禁止使用匿名方式访问
    </solution>
    <status value="on"/>
